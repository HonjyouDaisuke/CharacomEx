<Window x:Class="CharacomEx.ReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacomEx"
        mc:Ignorable="d"
        Title="置換" Height="200" Width="300">
    <Grid>
        <Label Content="検索文字：" Margin="10,10,0,0"/>
        <TextBox x:Name="SearchString" Margin="81,12,0,0 " Width="200" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="置換文字：" Margin="10,54,0,0" />
        <TextBox x:Name="ReplaceString" Margin="81,54,0,0 " Width="200" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="RunButton" Margin="50,120,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="置換" Click="RunButton_Click"></Button>
        <Button x:Name="CancelButton" Margin="0,120,50,0" HorizontalAlignment="Right" VerticalAlignment="Top" Content="キャンセル" Click="CancelButton_Click"></Button>
    </Grid>
</Window>
